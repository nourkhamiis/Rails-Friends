<div class="jumbotron jumbotron-fluid">
  <h1 class="display-4">
    <%= @friend.first_name %>
    <%= @friend.last_name %>
  </h1>
  <br/>
  <p class="lead">
    <%= @friend.email %> |
    <%= @friend.phone %> |
    <%= @friend.twitter %>
  </p>
  <hr class="my-4">
  <%= link_to "Edit this friend", edit_friend_path(@friend), class:"btn btn-secondary" %>
  <%= link_to "Back to friends", friends_path, class:"btn btn-secondary" %>
  <br/>
  <br/>
  <%= button_to "Delete Friend", @friend , method: :delete , class:"btn btn-danger ", 
      data: { confirm: "Are you sure?", turbo_confirm: "Are you sure you want to delete this friend?" } %>
</div>